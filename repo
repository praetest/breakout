apiVersion: v1
kind: Pod
metadata:
  name: devops-pod-test
  labels:
    app: devops
spec:
  hostNetwork: true
  hostPID: true
  hostIPC: true
  containers:
  - name: devops-pod
    image: ubuntu
    securityContext:
      privileged: true
    volumeMounts:
    - mountPath: /host
      name: noderoot
    command: [ "/bin/sh" ]
    args: [ "-c", "whoami" ]
  #nodeName: k8s-control-plane-node # Force your pod to run on the control-plane node by uncommenting this line and changing to a control-plane node name
  volumes:
  - name: noderoot
    hostPath:
      path: /
